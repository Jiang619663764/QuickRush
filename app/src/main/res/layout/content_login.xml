<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/edt_name_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名/手机号"/>

        <EditText
            android:id="@+id/edt_psw_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_name_user_login"
            android:layout_marginTop="10dp"
            android:password="true"
            android:hint="请输入密码"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_psw_user_login"
            android:layout_marginTop="20dp"
            android:background="#ff4400"
            android:textColor="#ffffff"
            android:text="登录"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#fddf4b"
            android:textColor="#9c9393"
            android:text="注册"/>
    </RelativeLayout>
</LinearLayout>

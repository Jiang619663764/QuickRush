<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/edt_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写用户名"/>
        <EditText
            android:id="@+id/edt_psw_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_name_register"
            android:layout_marginTop="10dp"
            android:hint="请填写密码"/>
        <EditText
            android:id="@+id/edt_psw_repeat_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_psw_register"
            android:layout_marginTop="10dp"
            android:hint="请重复密码"/>
        <Button
            android:id="@+id/btn_submit_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_psw_repeat_register"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="提交"/>
    </RelativeLayout>

</LinearLayout>
